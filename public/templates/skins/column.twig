                            {% endif %}
                        {% endif %}
                   data-gdpr_action="reject" >{{ __( button_decline_text, 'gdpr-cookie-consent' ) }}</a>
            {% endif %}
        </div>
        {% if show_credits %}
            {% if credits %}
                <div class="powered-by-credits">{{ credits }}</div>
            {% endif %}
        {% endif %}
    </div>
{% endif %}